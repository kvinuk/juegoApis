<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<h3><%= question.title %></h3>
	</div>
</div>
<% num = rand(4) + 1 %>
<div class="row">
	<% for n in 1..4 %>
	<%if n == 3 %>
	<div class="row">
	<% else %>
	<% end %>
		<% if num == 1%>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h3><%= n %></h3>
				<%= link_to image_tag(question.retrieve(num), class: "img-responsive", style: "border: 2px solid lightgrey; border-radius: 5px;"), match_path(@match, :min_id => question.id, :val => question.answer1 ) %>
			</div>
		<% else %>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h3><%= n %></h3>
				<%= link_to image_tag(question.retrieve(num), class: "img-responsive", style: "border: 2px solid lightgrey; border-radius: 5px;"), match_path(@match, :min_id => question.id, :val => question.answer2 ) %>
			</div>
		<% end %> 
		<%if n == 2 %>
		</div>
		<% else %>
		<% end %>
		<% if num == 4 %>
		<% num = 1 %>
		<% else %>
		<%  num = num + 1 %>
		<% end %>
	<% end %>
</div>