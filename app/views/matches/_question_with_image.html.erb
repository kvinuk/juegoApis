<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<h3><%= question.title %></h3>
	</div>
</div>
<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<%= image_tag(question.question_image, class: "img-responsive", style: "border: 2px solid lightgrey; border-radius: 5px;") %>	
	</div>
</div>
<% num = rand(4) + 1 %>
<div class="row">
	<% for n in 1..4 %>
		<%if n == 3 %>
		<div class="row">
		<% else %>
		<% end %>
		<% if num == 1%>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h3><%= n %></h3>
				<%= link_to match_path(@match, :min_id => question.id, :val => question.answer1) do %>
					<h3><%= question.retrieve(num) %></h3>
				<% end %>
			</div>
		<% else %>
			<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
				<h3><%= n %></h3>
				<%= link_to match_path(@match, :min_id => question.id, :val => question.answer2 ) do %>
					<h3><%= question.retrieve(num) %></h3>
				<% end %>
			</div>
		<% end %> 
		<%if n == 2 %>
		</div>
		<% else %>
		<% end %>
		<% if num == 4 %>
		<% num = 1 %>
		<% else %>
		<%  num = num + 1 %>
		<% end %>
	<% end %>
</div>